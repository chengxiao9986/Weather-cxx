<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:id="@+id/top_view">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="当前城市：某某地"
            android:textSize="20sp"
            android:textColor="#ffffffff"/>
        <ImageView
            android:id="@+id/button_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/base_action_bar_action_city"/>
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_action_bar_back_normal"
            android:focusableInTouchMode="false"/>
        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="45.0dip"
            android:layout_toRightOf="@id/title_back"
            android:layout_centerVertical="true"
            android:layout_gravity = "center"
            android:background="#ffcd2626"
            android:gravity="center"/>
        <!--<ImageView-->
        <!--android:id="@+id/title_search"-->
        <!--android:layout_width="45.0dip"-->
        <!--android:layout_height="35.0dip"-->
        <!--android:paddingTop="9dip"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:src="@drawable/sousuo"/>-->

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/center_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_view">
        <EditText
            android:id="@+id/search_edit"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:hint="搜索全国城市（中文）"
            android:layout_margin="10.0dip"
            android:drawableLeft="@drawable/magnifying_glass"
            android:drawablePadding="8.0dip"
            android:paddingBottom="8.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="30.0dip"
            android:paddingTop="8.0dip"
            android:singleLine="true"
            android:background="@drawable/contact_search_box_edittext_keyword_background"
            android:textColor="#ff000000"
            android:textColorHint="#ffcccccc"
            android:textSize="15.0sp"/>
        <ImageView
            android:id="@+id/yuyin_search"
            android:paddingBottom="10dip"
            android:layout_width="80dip"
            android:layout_height="50dip"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/yuyin"
            android:paddingTop="10dip"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/center_view"
        android:paddingTop="16.0dip">

        <ListView
            android:id="@+id/city_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        </ListView>
        <TextView
            android:id="@+id/city_name"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingLeft="10dip"/>
        <TextView
            android:id="@+id/city_number"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/city_name"
            android:textColor="@android:color/black"
            android:paddingLeft="10dip"/>

    </RelativeLayout>


</RelativeLayout>