            android:text="微风"
            android:layout_below="@id/day5_weather"
            android:paddingLeft="40dip"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/day6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
